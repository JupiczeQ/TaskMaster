<?xml version="1.0" encoding="UTF-8"?>
<form xmlns="http://www.intellij.com/uidesigner/form/" version="1" bind-to-class="RightPanels.ModCategoryPanel">
  <grid id="27dc6" binding="mainPanel" layout-manager="GridLayoutManager" row-count="3" column-count="1" same-size-horizontally="false" same-size-vertically="false" hgap="-1" vgap="-1">
    <margin top="15" left="20" bottom="10" right="20"/>
    <constraints>
      <xy x="20" y="20" width="400" height="200"/>
    </constraints>
    <properties>
      <background color="-1"/>
    </properties>
    <border type="none"/>
    <children>
      <!-- Panel pola nazwy -->
      <grid id="namePanel" layout-manager="GridLayoutManager" row-count="2" column-count="1" same-size-horizontally="false" same-size-vertically="false" hgap="-1" vgap="5">
        <margin top="0" left="0" bottom="10" right="0"/>
        <constraints>
          <grid row="0" column="0" row-span="1" col-span="1" vsize-policy="3" hsize-policy="3" anchor="0" fill="3" indent="0" use-parent-layout="false"/>
        </constraints>
        <properties>
          <background color="-1"/>
        </properties>
        <border type="none"/>
        <children>
          <component id="nameLabel" class="javax.swing.JLabel" binding="nameLabel">
            <constraints>
              <grid row="0" column="0" row-span="1" col-span="1" vsize-policy="0" hsize-policy="0" anchor="8" fill="0" indent="0" use-parent-layout="false"/>
            </constraints>
            <properties>
              <font size="14"/>
              <text value="Nazwa kategorii:"/>
            </properties>
          </component>
          <component id="nameField" class="javax.swing.JTextField" binding="nameField">
            <constraints>
              <grid row="1" column="0" row-span="1" col-span="1" vsize-policy="0" hsize-policy="6" anchor="8" fill="1" indent="0" use-parent-layout="false">
                <preferred-size width="300" height="30"/>
              </grid>
            </constraints>
            <properties>
              <font size="14"/>
              <margin top="2" left="8" bottom="2" right="8"/>
            </properties>
          </component>
        </children>
      </grid>

      <!-- Panel przycisków -->
      <grid id="buttonPanel" layout-manager="GridLayoutManager" row-count="1" column-count="4" same-size-horizontally="false" same-size-vertically="false" hgap="10" vgap="-1">
        <margin top="10" left="0" bottom="15" right="0"/>
        <constraints>
          <grid row="2" column="0" row-span="1" col-span="1" vsize-policy="3" hsize-policy="3" anchor="0" fill="3" indent="0" use-parent-layout="false"/>
        </constraints>
        <properties>
          <background color="-1"/>
        </properties>
        <border type="none"/>
        <children>
          <!-- Spacer po lewej -->
          <hspacer id="leftSpacer">
            <constraints>
              <grid row="0" column="0" row-span="1" col-span="1" vsize-policy="1" hsize-policy="6" anchor="0" fill="1" indent="0" use-parent-layout="false"/>
            </constraints>
          </hspacer>
          
          <!-- Przycisk Usuń (tylko w trybie edycji) -->
          <component id="deleteButton" class="javax.swing.JButton" binding="deleteButton">
            <constraints>
              <grid row="0" column="1" row-span="1" col-span="1" vsize-policy="0" hsize-policy="3" anchor="0" fill="0" indent="0" use-parent-layout="false">
                <minimum-size width="100" height="35"/>
                <preferred-size width="100" height="35"/>
              </grid>
            </constraints>
            <properties>
              <font size="14"/>
              <text value="Usuń"/>
              <visible value="false"/>
            </properties>
          </component>
          
          <!-- Przycisk Anuluj -->
          <component id="cancelButton" class="javax.swing.JButton" binding="cancelButton">
            <constraints>
              <grid row="0" column="2" row-span="1" col-span="1" vsize-policy="0" hsize-policy="3" anchor="0" fill="0" indent="0" use-parent-layout="false">
                <minimum-size width="100" height="35"/>
                <preferred-size width="100" height="35"/>
              </grid>
            </constraints>
            <properties>
              <font size="14"/>
              <text value="Anuluj"/>
            </properties>
          </component>
          
          <!-- Przycisk Zapisz -->
          <component id="saveButton" class="javax.swing.JButton" binding="saveButton">
            <constraints>
              <grid row="0" column="3" row-span="1" col-span="1" vsize-policy="0" hsize-policy="3" anchor="0" fill="0" indent="0" use-parent-layout="false">
                <minimum-size width="120" height="35"/>
                <preferred-size width="120" height="35"/>
              </grid>
            </constraints>
            <properties>
              <font size="14"/>
              <text value="Zapisz"/>
            </properties>
          </component>
        </children>
      </grid>

      <!-- Spacer środkowy -->
      <vspacer id="middleSpacer">
        <constraints>
          <grid row="1" column="0" row-span="1" col-span="1" vsize-policy="6" hsize-policy="1" anchor="0" fill="2" indent="0" use-parent-layout="false"/>
        </constraints>
      </vspacer>
    </children>
  </grid>
</form>